<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/judul1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JADWAL SHOLAT"
        android:fontFamily="sans-serif-black"
        android:textSize="30sp"/>


    <TextView
        android:id="@+id/lblk1a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul1"
        android:layout_marginTop="20dp"
        android:text="Shubuh :"
        android:textSize="16sp" />
    <TextView
        android:layout_below="@+id/judul1"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/lblk1a"
        android:id="@+id/txtk1a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waktu Shubuh"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_below="@+id/lblk1a"
        android:id="@+id/lblk1b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dhuhur : "/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/lblk1a"
        android:layout_toRightOf="@+id/lblk1b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waktu Dhuhur"
        android:id="@+id/txtk1b"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_below="@+id/lblk1b"
        android:id="@+id/lblk1c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ashar :"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_below="@+id/lblk1b"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/lblk1c"
        android:id="@+id/txtk1c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waktu Ashar"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_below="@+id/lblk1c"
        android:id="@+id/lblk1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maghrib :"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/lblk1c"
        android:layout_toRightOf="@+id/lblk1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtk1d"
        android:text="Waktu Maghrib"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_below="@+id/lblk1d"
        android:id="@+id/lblk1e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isya :"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/lblk1d"
        android:layout_toRightOf="@+id/lblk1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtk1e"
        android:text="Waktu Isha"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_below="@+id/lblk1e"
        android:id="@+id/lblk1f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dhuha :"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/lblk1e"
        android:layout_toRightOf="@+id/lblk1f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtk1f"
        android:text="Waktu Dhuha"
        />



    <EditText
        android:layout_marginTop="5dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/datak1a"
        android:layout_below="@+id/lblk1f"
        android:hint="EDIT WAKTU"
        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/datak1b"
        android:layout_below="@+id/datak1a"
        android:hint="EDIT WAKTU"
        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/datak1c"
        android:layout_below="@+id/datak1b"
        android:hint="EDIT WAKTU"
        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/datak1d"
        android:layout_below="@+id/datak1c"
        android:hint="EDIT WAKTU"
        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/datak1e"
        android:layout_below="@+id/datak1d"
        android:hint="EDIT WAKTU"
        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/datak1f"
        android:layout_below="@+id/datak1e"
        android:hint="EDIT WAKTU"
        />

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/update1"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:layout_below="@+id/datak1e"
        android:layout_toRightOf="@+id/datak1f"

        android:layout_alignLeft="@+id/home1"/>
    <Button
        android:id="@+id/home1"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/txtk1a"
        android:layout_below="@+id/judul1"
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"



        />
</RelativeLayout>